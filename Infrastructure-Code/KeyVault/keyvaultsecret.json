{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "kvName": {
            "type": "string",
            "metadata": {
                "description": "Name of the key vault under which secret to be created"
            }
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "Name of the secret"
            }
        },
        "rgLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of resource group"
            }
        },
        "secretValue": {
            "type": "string",
            "metadata": {
                "description": "Value for the secret"
            }
        },
        "generateSecret": {
            "type": "bool",
            "metadata": {
                "description": "If secret needs to be generated"
            }
        },
        "secretNameGen": {
            "type": "string",
            "metadata": {
                "description": "Name of the secret generated"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "condition": "[not(parameters('generateSecret'))]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('kvName'), '/', parameters('secretName'))]",
            "apiVersion": "2016-10-01",
            "location": "[parameters('rgLocation')]",
            "properties": {
                "value": "[parameters('secretValue')]"
            }
        },
        {
            "condition": "[parameters('generateSecret')]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('kvName'), '/', parameters('secretNameGen'))]",
            "apiVersion": "2016-10-01",
            "location": "[parameters('rgLocation')]",
            "properties": {
               "value": "[concat('IIPrograme@kvsecret',uniqueString(resourceGroup().id))]"
             }
        }        
    ],
    "outputs": {
        "sqlPassword": {
            "type": "string",
            "value": "[concat('IIPrograme@kvsecret',uniqueString(resourceGroup().id))]"
        }
    }
}