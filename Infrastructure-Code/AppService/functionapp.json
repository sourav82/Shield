{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app to create."
            }
        },
        "rgLocation": {
            "type": "string",
            "metadata": {
                "description": "The location in which all resources should be deployed."
            }
        },
        "appServicePlanName": {
           "type": "string",
           "metadata": {
                "description": "Reference to the app service plan"
            }
        },
        "subnetResourceId": {
           "type": "string",
           "metadata": {
                "description": "Reference to the empty subnet for vnet integration"
            }
        },
        "environment": {
           "type": "string",
           "metadata": {
                "description": "Environment of this deployment"
            }
        },
        "project": {
           "type": "string",
           "metadata": {
                "description": "Project name for this deployment"
            }
        },
        "webappKind": {
            "type": "string",
            "allowedValues": [
                "app",
                "functionapp,linux"
            ],
            "metadata": {
                "description": "Kind of web app"
            }
        },
        "numberOfFuncs": {
            "type": "int",
            "metadata": {
                "description": "Number of functions/applications to be created"
            }
        },
        "funcStorageName": {
            "type": "string",
            "metadata": {
                "description": "Name of storage account for function"
            }
        },
        "insightName": {
            "type": "string",
            "metadata": {
                "description": "Name of application insight"
            }
        }
    },
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('appName'), padLeft(add(copyIndex(), 1), 4, '0'))]",
            "tags": {
                "Environment-Type": "[parameters('environment')]",
                "project": "[parameters('project')]"
            },
            "location": "[parameters('rgLocation')]",
            "copy": {
                "name": "sitecopy",
                "count": "[parameters('numberOfFuncs')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "kind": "[parameters('webappKind')]",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('insightName'), padLeft(add(copyIndex(), 1), 4, '0')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                        "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                        "value": "~2"
                        },
                        {
                        "name": "XDT_MicrosoftApplicationInsights_Mode",
                        "value": "recommended"
                        },
                        {
                        "name": "InstrumentationEngine_EXTENSION_VERSION",
                        "value": "~1"
                        },
                        {
                        "name": "DiagnosticServices_EXTENSION_VERSION",
                        "value": "~3"
                        },
                        {
                        "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                        "value": "1.0.0"
                        },
                        {
                        "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                        "value": "~1"
                        },                       
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(concat('microsoft.insights/components/', parameters('insightName'), padLeft(add(copyIndex(), 1), 4, '0')), '2015-05-01').ConnectionString]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('funcStorageName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('funcStorageName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(concat(parameters('appName'), padLeft(add(copyIndex(), 1), 4, '0'))), 'bf06')]"
                        }

                    ],
                    "linuxFxVersion": "Python|3.7"
                },
                "reserved": true
            },
            "resources": [
                {
                   "name": "virtualNetwork",
                    "type": "networkConfig",
                    "apiVersion": "2018-02-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', concat(parameters('appName'), padLeft(add(copyIndex(), 1), 4, '0')))]"
                    ],
                    "properties": {
                        "subnetResourceId": "[parameters('subnetResourceId')]", //"[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]",
                        "swiftSupported": true
                    }
                                    
                }
            ]        
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[concat(parameters('insightName'), padLeft(add(copyIndex(), 1), 4, '0'))]",
            "type": "microsoft.insights/components",
            "location": "uksouth",
            "kind": "insights",
            "tags": {},
            "copy": {
                "name": "sitecopy",
                "count": "[parameters('numberOfFuncs')]"
            },            
            "properties": {
                "ApplicationId": "[concat(parameters('appName'),padLeft(add(copyIndex(), 1), 4, '0'))]",
                "Application_Type": "web"
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('funcStorageName')]",
            "location": "[parameters('rgLocation')]",
            "tags": {},
            "copy": {
                "name": "sitecopy",
                "count": "[parameters('numberOfFuncs')]"
            },            
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true
            }
        }

    ]
}