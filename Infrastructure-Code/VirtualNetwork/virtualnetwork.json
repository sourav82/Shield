{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgLocation": {
           "type": "string",
           "metadata": {
                "description": "Location of resource group"
            }
        },
        "environment": {
           "type": "string",
           "metadata": {
                "description": "Environment for this deployment"
            }
        },
        "project": {
           "type": "string",
           "metadata": {
                "description": "Project name for this deployment"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the virtual network"
            }
        },
        "vnetAddressCIDR": {
           "type": "string",
           "metadata": {
                "description": "IP CIDR for the vnet"
            }
        },
        "functionappSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name for function app vnet integration"
            }
        },
        "functionappSubnetCIDR": {
            "type": "string",
            "metadata": {
                "description": "IP CIDR for the function app subnet"
            }
        },
        "apimSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name for API Management"
            }
        },
        "apimSubnetCIDR": {
            "type": "string",
            "metadata": {
                "description": "IP CIDR for API management subnet"
            }
        }
    },
    "variables": {
        "networkSecurityGroupName": "[concat('nsgshield', uniqueString(resourceGroup().id))]",
        "adbNetworkSecurityGroupName": "databricksnsgshield",
        "apimNetworkSecurityGroupName": "apimsubnetnsg"
    },
    "resources": [
        {
            "type":  "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-12-01",
            "tags": {
                "Environment-Type": "[parameters('environment')]",
                "Project": "[parameters('project')]"
            },            
            "name":  "[variables('networkSecurityGroupName')]",
            "location":  "[parameters('rgLocation')]"
        }, 
        {
            "type":  "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-12-01",
            "name":  "[variables('adbNetworkSecurityGroupName')]",
            "location":  "[parameters('rgLocation')]",
            "tags": {
                "Environment-Type": "[parameters('environment')]",
                "project": "[parameters('project')]"
            }            
        },
        {
            "type":  "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-12-01",
            "tags": {
                "Environment-Type": "[parameters('environment')]",
                "Project": "[parameters('project')]"
            },            
            "name":  "[variables('apimNetworkSecurityGroupName')]",
            "location":  "[parameters('rgLocation')]"
        },                
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-12-01",
            "name": "[parameters('vnetName')]",
            "location": "[parameters('rgLocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('adbNetworkSecurityGroupName'))]"
            ],
            "tags": {
                "Environment-Type": "[parameters('environment')]",
                "Project": "[parameters('project')]"
            },            
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressCIDR')]"
                    ]
                },
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": true,
                "subnets": [
                    {
                        "name": "[parameters('functionappSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('functionappSubnetCIDR')]",
                            "delegations": [
                                {
                                    "name": "funcapp-del",
                                    "properties": {
                                        "serviceName": "Microsoft.Web/serverFarms"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[parameters('apimSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('apimSubnetCIDR')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                       }
                    }                                                                                                      
                ]
            }
        }                     
    ]
}